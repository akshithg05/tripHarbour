header.header
    nav.nav.nav--tours
        a.nav__el(href='/') All trips
    .header--logo
        img(src='/img/anchor-logo-white.png' alt= 'TripHarbour logo')
    nav.nav.nav--user
        if user
            a.nav__el.nav__el--logout Log out
            a.nav__el(href='/me')
                img.nav__user-img(src=`/img/users/${user.photo}` alt='User photo')
                span= user.name.split(' ')[0]
        else
            a.nav__el(href= '/login') Log in
            button.nav__el.nav__el--cta(href='#') Sign up
